{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "terminal",
        "hooks": [
          {
            "type": "command",
            "command": "kodegen hook notify",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "kodegen hook notify",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
